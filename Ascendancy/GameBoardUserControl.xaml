    <UserControl.Resources>
        <Storyboard x:Key="DropHumanPod">
            <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0" Duration="0:0:.1"  />
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="-150" To="0" BeginTime="0:0:1" Duration="0:0:2.5">
                <DoubleAnimation.EasingFunction>
                    <BounceEase Bounces="3" Bounciness="3" EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>


        <Storyboard x:Key="DropRobotPod">
            <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0" Duration="0:0:.1"  />
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="-150" To="0" BeginTime="0:0:1" Duration="0:0:2.5">
                <DoubleAnimation.EasingFunction>
                    <BounceEase Bounces="3" Bounciness="3" EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>



        <Storyboard x:Key="RedFrontStoryboard" TargetName="GradRedFront" TargetProperty="Offset">
            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever">
                <EasingDoubleKeyFrame Value=".55" KeyTime="0:0:0"/>
                <EasingDoubleKeyFrame Value=".15" KeyTime="0:0:3"/>
                <EasingDoubleKeyFrame Value=".95" KeyTime="0:0:7"/>
                <EasingDoubleKeyFrame Value=".55" KeyTime="0:0:10"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="RedBackStoryboard" TargetName="GradRedBack" TargetProperty="Offset">
            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever">
                <EasingDoubleKeyFrame Value=".45" KeyTime="0:0:0"/>
                <EasingDoubleKeyFrame Value=".05" KeyTime="0:0:3"/>
                <EasingDoubleKeyFrame Value=".85" KeyTime="0:0:7"/>
                <EasingDoubleKeyFrame Value=".45" KeyTime="0:0:10"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="RedStoryboard" TargetName="GradRed" TargetProperty="Offset">
            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever">
                <EasingDoubleKeyFrame Value=".5" KeyTime="0:0:0"/>
                <EasingDoubleKeyFrame Value=".1" KeyTime="0:0:3"/>
                <EasingDoubleKeyFrame Value=".9" KeyTime="0:0:7"/>
                <EasingDoubleKeyFrame Value=".5" KeyTime="0:0:10"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource RedFrontStoryboard}"/>
            <BeginStoryboard Storyboard="{StaticResource RedBackStoryboard}"/>
            <BeginStoryboard Storyboard="{StaticResource RedStoryboard}"/>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>
