        </Grid.Background>
        <Label x:Name="SinglePlayerLabel_Copy" Content="Single Player" HorizontalAlignment="Left" Margin="539,172,0,0" VerticalAlignment="Top" Foreground="White" Width="345" Height="83" FontSize="36" FontFamily="Ubuntu Mono" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <Label.Effect>
                <BlurEffect Radius="10"/>
            </Label.Effect>
        </Label>

        <Label x:Name="SinglePlayerLabel" Content="Single Player" HorizontalAlignment="Left" Margin="539,172,0,0" VerticalAlignment="Top" Foreground="White" Width="345" Height="83" FontSize="36" FontFamily="Ubuntu Mono" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Image x:Name="GoFirstClick" HorizontalAlignment="Left" Height="131" Margin="396,467,0,0" VerticalAlignment="Top" Width="280" Source="/Ascendancy;component/Resources/Images/UserControlResources/SinglePlayer/GoFirstClickGlow.png" Panel.ZIndex="2"/>
        <Image x:Name="GoFirstHover" HorizontalAlignment="Left" Height="131" Margin="396,467,0,0" VerticalAlignment="Top" Width="280" Source="/Ascendancy;component/Resources/Images/UserControlResources/SinglePlayer/GoFirstHover.png" Panel.ZIndex="2"/>
