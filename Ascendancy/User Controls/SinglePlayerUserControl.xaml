        <Image x:Name="GoSecondClick" HorizontalAlignment="Left" Height="131" Margin="736,467,0,0" VerticalAlignment="Top" Width="280" Source="/Ascendancy;component/Resources/Images/UserControlResources/SinglePlayer/GoSecondClickGlow.png" Panel.ZIndex="2"/>
        <Image x:Name="GoSecondHover" HorizontalAlignment="Left" Height="131" Margin="736,467,0,0" VerticalAlignment="Top" Width="280" Source="/Ascendancy;component/Resources/Images/UserControlResources/SinglePlayer/GoSecondHover.png" Panel.ZIndex="2"/>
        <Image x:Name="GoSecondIdle" HorizontalAlignment="Left" Height="131" Margin="736,467,0,0" VerticalAlignment="Top" Width="280" Source="/Ascendancy;component/Resources/Images/UserControlResources/SinglePlayer/GoSecondIdle.png" MouseDown="UserControlButton_MouseDown" MouseEnter="UserControlButton_MouseEnter" MouseLeave="UserControlButton_MouseLeave" MouseUp="UserControlButton_MouseUp" Panel.ZIndex="2"/>
        <Image x:Name="EasyClick" HorizontalAlignment="Left" Height="131" Margin="396,302,0,0" VerticalAlignment="Top" Width="280" Source="/Ascendancy;component/Resources/Images/UserControlResources/SinglePlayer/EasyClickGlow.png" Panel.ZIndex="2"/>
        <Image x:Name="EasyHover" HorizontalAlignment="Left" Height="131" Margin="396,302,0,0" VerticalAlignment="Top" Width="280" Source="/Ascendancy;component/Resources/Images/UserControlResources/SinglePlayer/EasyHover.png" Panel.ZIndex="2"/>
        <Image x:Name="EasyIdle" HorizontalAlignment="Left" Height="131" Margin="396,302,0,0" VerticalAlignment="Top" Width="280" Source="/Ascendancy;component/Resources/Images/UserControlResources/SinglePlayer/EasyIdle.png" MouseDown="UserControlButton_MouseDown" MouseEnter="UserControlButton_MouseEnter" MouseLeave="UserControlButton_MouseLeave" MouseUp="UserControlButton_MouseUp" Panel.ZIndex="2"/>
        <Image x:Name="HardClick" HorizontalAlignment="Left" Height="131" Margin="736,302,0,0" VerticalAlignment="Top" Width="280" Source="/Ascendancy;component/Resources/Images/UserControlResources/SinglePlayer/HardClickGlow.png" Panel.ZIndex="2"/>
