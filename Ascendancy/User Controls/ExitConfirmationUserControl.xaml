                <BlurEffect Radius="10"/>
            </Label.Effect>
        </Label>
        <Label Content="Are you sure you want to &#xD;&#xA;quit this awesome game?&#xD;&#xA;" HorizontalAlignment="Left" Margin="484,323,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Verdana" Height="167" Width="478" Foreground="White"/>
